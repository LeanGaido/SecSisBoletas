@model DAL.Models.DeclaracionJurada

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar</h2>

<h3>¿Estas Seguro que deseas eliminar esta Declaracion Jurada?</h3>
<div>
    <h4>BoletaAportes</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Empresa")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Empresa.RazonSocial)
        </dd>

        <dt>
            @Html.DisplayName("Mes")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mes)
        </dd>

        <dt>
            @Html.DisplayName("Anio")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.anio)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.IdDeclaracionJurada)

        <div class="form-actions no-color">
            <div class="col-md-2">
                <input type="submit" id="submit" value="ELIMINAR" class="btn btn-default" />
            </div>
            <div class="col-md-2">
                @Html.ActionLink("VOLVER", "IndexDeclaracionesJuradas", new { mes = Model.mes, anio = Model.anio, estadoPago = 0, idEmpresa = Model.idEmpresa }, new { @class = "btn btn-default" })
            </div>
        </div>
    }
</div>
